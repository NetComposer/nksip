{deps, [
    {nklib, {git, "https://github.com/netcomposer/nklib", {branch, "master"}}},
    {nkpacket, {git, "https://github.com/netcomposer/nkpacket", {branch, "master"}}},
    {nkserver, {git, "https://github.com/netcomposer/nkserver", {branch, "master"}}}
]}.
